@using TasksMenager.Models
@model LoginViewModel

@{
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tasks manager</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div class="row justify-content-center align-content-center">
            <div class="col-4">
                <h1>Nazwa firmy</h1>
                <div class="card">
                    <div class="card-header" style="padding: 5px;">
                        <text>Panel logowania</text>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Wprowadź dane logowania</h5>
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                @Html.LabelFor(m => m.Login)
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Login, new { @class = "form-control", style = "width: 300px;" })
                                    @Html.ValidationMessageFor(m => m.Login, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.Password)
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", style = "width: 300px;" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <input type="submit" value="Log in" class="btn btn-primary"/>
                            </div>

                        }
                    </div>


                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>


